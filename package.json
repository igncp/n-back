{
  "name": "nback",
  "version": "0.0.1",
  "description": "Memory training application built with react native",
  "homepage": "https://github.com/igncp/n-back",
  "private": true,
  "scripts": {
    "android-build": "cd android && ./gradlew assembleRelease",
    "android-devices": "$ANDROID_HOME/platform-tools/adb devices",
    "android-install": "cd android && ./gradlew assembleRelease && ./gradlew installRelease",
    "android-logcat": "$ANDROID_HOME/platform-tools/adb logcat *:S ReactNative:V ReactNativeJS:V",
    "android-shake": "$ANDROID_HOME/platform-tools/adb devices | grep '\\t' | awk '{print $1}' | sed 's/\\s//g' | xargs -I {} $ANDROID_HOME/platform-tools/adb -s {} shell input keyevent 82",
    "lint": "eslint src",
    "lint-fix": "eslint --fix src && npm run lint",
    "start": "./node_modules/react-native/packager/packager.sh start --reset-cache",
    "start-ios": "./node_modules/.bin/react-native run-ios && npm start",
    "test": "mocha $npm_package_config_mocha",
    "test-watch": "mocha $npm_package_config_mocha -w"
  },
  "devDependencies": {
    "apisauce": "^0.3.0",
    "babel": "^6.5.2",
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "enzyme": "^2.3.0",
    "esformatter": "^0.9.6",
    "esformatter-asi": "^0.5.2",
    "eslint": "^3.2.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-react": "^5.2.2",
    "format-json": "^1.0.3",
    "ghooks": "^1.3.2",
    "mobx": "^2.4.3",
    "mobx-react": "^3.5.5",
    "mocha": "^3.0.2",
    "nyc": "^7.0.0",
    "querystringify": "0.0.3",
    "ramda": "^0.22.0",
    "react": "~15.2.1",
    "react-addons-test-utils": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-native": "^0.31.0",
    "react-native-animatable": "^0.6.0",
    "react-native-button": "^1.6.0",
    "react-native-device-info": "^0.9.3",
    "react-native-drawer": "^2.2.6",
    "react-native-i18n": "0.0.8",
    "react-native-mock": "^0.2.3",
    "react-native-router-flux": "^3.30.6",
    "react-native-vector-icons": "^2.0.2",
    "seamless-immutable": "^6.1.0",
    "snazzy": "^4.0.0"
  },
  "config": {
    "mocha": "src/**/__tests__/*.js",
    "ghooks": {
      "pre-commit": "npm test && npm run lint"
    }
  }
}
